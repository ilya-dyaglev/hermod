{
  "name": "hermod",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib/ui"
  ],
  "description": "Hermod - Predictive Multi-Modal Congestion Avoider for Luxembourg cross-border commuters",
  "main": "lib/infra/hermod-stack.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "./scripts/deploy.sh",
    "deploy:skip-auth": "cdk deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "destroy": "cdk destroy",
    "ui:install": "npm install -w hermod-ui",
    "ui:dev": "npm run dev -w hermod-ui",
    "ui:build": "npm run build -w hermod-ui"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.15",
    "aws-cdk": "^2.170.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.4.0",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.170.0",
    "constructs": "^10.3.0",
    "dotenv": "^17.2.3"
  }
}
